= form_for @product, multipart: true do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :Nazwa
    = f.text_field :name
  .field
    = f.label :Cena
    = f.text_field :price
  .field
    = f.label :'Dodaj zdjÄ™cie'
    = f.file_field :image
  .field
    = f.label :Opis
    = f.text_field :description
  .field
    = f.label :Ocena
    = f.number_field :mark
  .actions
    = f.submit 'Save'
