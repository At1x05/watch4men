<% provide(:title, "Zaloguj się") %>
<h1>Zaloguj się</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :'Adres E-mail' %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :Hasło %>
      <%= link_to "(Zapomniałeś hasła?)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>
      <br>
      <%= f.submit "Zaloguj się", class: "btn btn-primary" %>
    <% end %>


    <p> Nie masz konta? <%= link_to "Zarejestruj się!", rejestracja_path %></p>
  </div>
</div>